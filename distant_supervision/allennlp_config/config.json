{
  "random_seed":  13270,
  "pytorch_seed": 1327,
  "numpy_seed": 1327,
  "dataset_reader": {
    "type": "relation_instances",
    "lazy": false,
    "max_bag_size": 100,
    "negative_exampels_percentage": 100,
    "with_direct_supervision": false,
    "add_inverse": true
  },
  "train_data_path": "data/PathwayCommons11.reactome.hgnc.txt/train.json",
  "validation_data_path": "data/PathwayCommons11.reactome.hgnc.txt/dev.json",
  "evaluate_on_test": false,
  "model": {
    "type": "comb_dist_direct_relex",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 200,
           "pretrained_file": "wikipedia-pubmed-and-PMC-w2v.vec.gz",
          "trainable": false
        }
      }
    },
    "sent_encoder": {
      "type": "cnn",
      "embedding_dim": 210,
      "num_filters": 100,
      "ngram_filter_sizes": [2, 3, 4, 5],
      "conv_layer_activation": "relu",
      "output_dim": 100
    },
    "dropout_weight": 0.1,
    "with_entity_embeddings": true,
    "sent_loss_weight": 0,
    "attention_weight_fn": "sigmoid",
    "attention_aggregation_fn": "max",
    "tensor_model_size": 200
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["is_direct_supervision_bag", "num_tokens"], ["mentions", "list_num_tokens"]],
    "batch_size": 4
  },
  "trainer": {
    "num_epochs": 100,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "patience": 3,
    "validation_metric": "+ap",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}
